{
  "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",

  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },

  "json": {
    "parser": {
      "allowComments": true
    }
  },

  "files": {
    "includes": ["**", "!**/.next", "!**/public/_pagefind", "!**/public/schemas", "!**/cspell.json"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },

  "linter": {
    "enabled": true
  },

  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  }
}
