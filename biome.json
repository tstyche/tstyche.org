{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",

  "json": {
    "parser": {
      "allowComments": true
    }
  },

  "files": {
    "includes": ["**", "!**/.next/**", "!**/public/_pagefind", "!**/public/schemas"]
  },

  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },

  "linter": {
    "enabled": true
  },

  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
