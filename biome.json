{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",

  "json": {
    "parser": {
      "allowComments": true
    }
  },

  "files": {
    "includes": ["**", "!**/.next/**", "!**/public/_pagefind", "!**/public/schemas"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },

  "linter": {
    "enabled": true
  },

  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  }
}
