{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "failFast": {
      "description": "Stop running tests after the first failed assertion.",
      "default": false,
      "type": "boolean"
    },
    "rootPath": {
      "description": "The path to a directory containing files of a test project.",
      "default": "./",
      "type": "string"
    },
    "target": {
      "description": "The list of TypeScript versions to be tested against.",
      "default": [
        "current"
      ],
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^([45]\\.[0-9](\\.[0-9])?)|beta|current|latest|next|rc$"
      }
    },
    "testFileMatch": {
      "description": "The list of glob patterns matching the test files.",
      "default": [
        "**/*.tst.*",
        "**/__typetests__/*.test.*",
        "**/typetests/*.test.*"
      ],
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    }
  }
}